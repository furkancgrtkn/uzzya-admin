{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-unused-vars": "warn",
    "prefer-const": 1,
    "no-var": "warn",
    "no-duplicate-imports": "error",
    "no-undef": "error",
    "prefer-spread": 1,
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal"],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"],
        "newlines-between": "never",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
